<Window x:Class="ReaderDataCollector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReaderDataCollector"
        mc:Ignorable="d"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="0.8*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
            <TextBox Text="{Binding Host}" Width="150" Margin="5 0 10 0"/>
            <TextBox Text="{Binding Port}" Width="50" Margin="5 0 10 0" />
            <Button Content="Connect" Command="{Binding StartReadingCommand}" Width="100" />
            <Button Content="Stop Reading" Command="{Binding StopReadingCommand}" Width="100" />
        </StackPanel>
        <DataGrid ItemsSource="{Binding Reads}" AutoGenerateColumns="True" Grid.Column="0" Grid.Row="1">
            
        </DataGrid>
    </Grid>
</Window>
